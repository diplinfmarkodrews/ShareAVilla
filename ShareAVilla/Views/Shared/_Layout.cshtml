<!DOCTYPE html>
<html>

<head>

    
   
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Share-A-Villa</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/js-helpers.js")

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/likibu.css")
    @Styles.Render("~/Content/Styles.css")
    @Scripts.Render("~/bundles/modernizr")   
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
</head>
   <body>
       <div id="bodylayout" class="bodylayout">
           <div id="background" class="index">
                <div class="navbar navbar-inverse navbar-fixed-top container">
                @if (!Request.IsAuthenticated)
                {

                    <div class="navbar-collapse collapse">
                        <div class="navbar-header">
                            @Html.ActionLink("Share-A-Villa", "Index", "Home", "", new { @class = "navbar-brand" })
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>

                            </button>

                        </div>



                        <ul class="nav navbar-nav">
                           
                            <li>@Html.ActionLink("How it works", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>



                }
                else
                {

                    <div class="navbar-collapse collapse">
                        <div class="navbar-header">
                            @Html.ActionLink("Share-A-Villa", "Index", "Home", "",new { @class = "navbar-brand" })
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                
                        </div>
            

                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Profile", "Details", "Profiles")</li>
                                <li>@Html.ActionLink("Requests", "Index", "Requests")</li>
                                <li>@Html.ActionLink("Applications", "Index", "RoomRequests")</li>
                                <li>@Html.ActionLink("Info", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>

                        }
            </div>

            <div class="container body-content" style="min-height:100%;">

                @RenderBody()

            </div>




        </div>
        <div class="footer">

            <div>&copy; Share-A-Villa - 2017</div>

        </div>
    </div>
     
          
           @Scripts.Render("~/bundles/bootstrap")               
           @RenderSection("scripts", required: false)
       
    </body>
</html>
