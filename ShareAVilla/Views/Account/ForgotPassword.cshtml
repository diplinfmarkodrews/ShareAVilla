@model ShareAVilla.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Kennwort vergessen?";
}

<h4>@ViewBag.Title</h4>

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h5>Please insert your email adress</h5>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="property">
        @Html.LabelFor(m => m.Email, new { @class = "labellogin" })
        <div class="col-md-3 textboxinput">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn" value="Send Link in email" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
