@model ShareAVilla.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
}
<hr/>
<h4>@ViewBag.Title</h4>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h5>Reset password</h5>
  
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Code)
    <div class="property">
        @Html.LabelFor(m => m.Email, new { @class = "labellogin" })
        <div class="col-md-3 textboxinput">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="property">
        @Html.LabelFor(m => m.Password, new { @class = "labellogin" })
        <div class="col-md-3 textboxinput">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="property">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "labellogin" })
        <div class="col-md-3 textboxinput">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="property">
        <div class="property-button">
            <input type="submit" class="btn" value="Reset" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
