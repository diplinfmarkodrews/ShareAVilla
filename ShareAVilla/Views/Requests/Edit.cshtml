@model ShareAVilla.Models.Request.RequestVMOwner

@{
    ViewBag.Title = "Edit Requests";
}

<hr />
<h2>Request</h2>
<h4>Edit</h4>
<hr/>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model=>model.requestType)
        @Html.Partial("~/Views/Requests/_RequestPropsPartial.cshtml", Model)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to My Requests", "Index")
</div>
