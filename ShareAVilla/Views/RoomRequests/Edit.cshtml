@model ShareAVilla.Models.RoomRequest.RoomRequestVMUser

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm("Edit", "RoomRequests", null, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-horizontal">
        
       
      
        @if (Model.Status == ShareAVilla.Models.RoomRequest.RoomRequestResponseStatus.Proposed)
        {
            @Html.Partial("~/Views/RoomRequests/_RoomRequestPropsUpdateProposalPartial.cshtml", Model)
        }
        else
        {
            @Html.Partial("~/Views/RoomRequests/_RoomRequestPropsPartial.cshtml", Model)
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name ="save" value="save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
